# .editorconfig

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.{js,ts,jsx,tsx,css,scss,less}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Python files
[*.py]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# YAML files
[*.yml]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files
[*.md]
charset = utf-8
trim_trailing_whitespace = false

# Configuration files
[*.{json,toml,ini}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
